@using AnimeCalendar.Data
<a class="list-group-item list-group-item-action" aria-current="true" href="@Link">
	<h4 class="mb-2">@Title</h4>
	<div class="row" style="--bs-gutter-x: .7rem">
		@foreach (var anime in Animes.Take(12).Select((a, i) => (a, i)))
		{
			<div class="col-4 col-sm-3 col-md-2 col-lg-1 padding-gutter-x d-@anime.i">
				<img class="img-fluid cover" src="@anime.a.Cover" alt="@anime.a.Name"/>
			</div>
		}
	</div>
</a>

@code {

	[Parameter]
	public string Title { get; set; } = null!;

	[Parameter]
	public IEnumerable<Anime> Animes { get; set; } = null!;

	[Parameter]
	public string Link { get; set; } = null!;

}